<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
  <div class="main">
    <div class="box">
    <h1><%= @project.name %></h1>


    <% if @project.developers.count != 0 %>
      <h3>Developers working on this Project:</h3>
      <div class="grid-container">
        <% @project.developers.each do |developer| %>

          <div class="grid-item">

          <button type="button" class="btn btn-outline-warning"><li><%= link_to developer.name, developer_path(developer) %> - <%= link_to "remove", remove_developer_path(developer, @project), method: :delete%></li></button><br><br>

          
          <form action="/reviews/new" method="get">
              <input type="hidden" name="developer_id" value= "<%= developer.id %>">
              <input type="hidden" name="user_id" value= "<%= @current_user.id %>">
              <input type="submit" value="review developer">
          </form>


          <img src="<%= developer.img_url %>" alt="">
          <div>
        <% end %>

        <form action="/jobs/new" method="get">
            <input type="hidden" name="project_id" value= "<%= @project.id %>">
            <input type="submit" value="Add More Developers">
        </form>
    <% else %>
          <p>You have no developers working on this project</p>

          <form action="/jobs/new" method="get">
              <input type="hidden" name="project_id" value= "<%= @project.id %>">
              <input type="submit" value="Add Developer">
          </form>
    <% end %>
      <div>
    </div>
  </div>
</body>
</html>


<p><%= button_to "delete this project", project_path(@project), method: :delete %></p>


<%= link_to "all your projects", projects_path %>
