<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
<div class="">
<div class="box-project-show">

  <div class="box-project-show-header">
    <h1>This is <%= @project.name %> project</h1>
    <p> Owned by: <%= link_to @project.user.name, user_path(@project.user) %></p>
    <h2>Team:</h2>
    <button type="button" class="btn btn-outline-warning"><%= link_to "Add Developer", new_team_path %></button><br><br>
  </div>

  <div class="grid-container">
    <% @project.developers.each do |developer| %>
      <div class="grid-item">
        <img src="<%= developer.img_url %>" alt=""> <br>
        <button type="button" class="btn btn-outline-warning"><%= link_to developer.name, developer %></button>
      </div>
    <% end %>
  <div>

    <p><%= button_to "delete this project", project_path(@project), method: :delete %></p>


    <%= link_to "all your projects", projects_path %>

    <p>Add more Developers to this project</p>

    <form action="/jobs/new" method="get">
        <input type="hidden" name="project_id" value= "<%= @project.id %>">
        <input type="submit" value="Add Member">
    </form>

  <% else %>
    <p>You have no developers working on this project</p>
    <p>Assign some below</p>

    <form action="/jobs/new" method="get">
        <input type="hidden" name="project_id" value= "<%= @project.id %>">
        <input type="submit" value="Add Member">
    </form>
  <% end %>

</div>
</div>
</body>
</html>
