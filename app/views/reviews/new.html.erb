<h2 align="center">review <%= @developer.name %></h2>


<% if flash[:errors] %>
  <% flash[:errors].each do |err_msg| %>
    <%= err_msg %>
  <% end %>
<% end %>

<%= form_for @review do |f| %>
  <%= f.label :content %><br />
  <%= f.text_area :content %><br />
  <%= f.label :rating %><br />
  <%= f.number_field :rating %><br />
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.hidden_field :developer_id, value: @developer.id %>

  <%= f.submit "add review" %>
<% end %>
