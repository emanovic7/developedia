
  <% if flash[:errors] %>
    <% flash[:errors].each do |err_msg| %>
      <%= err_msg %>
    <% end %>
  <% end %>


  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br />

    <%= f.label :password %>
    <%= f.text_field :password %><br />

    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %><br />

    <%= f.submit %>
  <% end %>
